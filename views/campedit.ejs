<% include partials/header %>
<div class="container">
        <h1 style="text-align: center;">Edit <%=campground.name %></h1>
            <div style="width: 30%; margin: 0 auto;">
                <form class="" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <!-- Value takes the data and displays it in the input fields  -->
                        <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-danger btn-block" type="submit">Send</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
</div>
<% include partials/footer %>
